{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            // The default debug configuration created automatically.
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            // For launching the file in a sub directory specified by the user.
            "name": "Python: subdir_name",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/subdir_name",
            "justMyCode": true
        },
        {
            // For launching the script as a python module. Requires the 'Command Variable' vscode extension.
            "name": "Python: Module",
            "type": "python",
            "request": "launch",
            "module": "${command:extension.commandvariable.file.relativeDirDots}.${fileBasenameNoExtension}",
            "justMyCode": false
        }
    ]
}